<%- if @error.present? %>
	<div class="error">
		<h3 class="error_title">エラーが発生しました</h3>
		<p class="error_msg"><%= @error %></p>
	</div>
<%- end %>

<%= form_for @user, html: { class: 'form'} do |f| %>
	<div class="form_group">
		<label class="form_group_label">名前</label>
		<%= f.text_field :name, class: 'form_group_input' %>
	</div>

	<div class="form_group">
		<label class="form_group_label">好きな食べ物</label>
		<ul class="form_group_checkboxes">
			<%= f.collection_check_boxes(:food_ids, @foods, :id, :name) do |b| %>
				<li class="el_checkbox"><%= b.check_box %><%= b.label { b.text} %></li>
			<%- end %>
		</ul>
	</div>

	<div class="form_single">
		<input type="checkbox" name="raise_error" value="1" id="raise_error" class="form_single_checkbox" checked>
		<label for="raise_error" class="form_single_label">エラーを起こす</label>
	</div>

	<div class="form_btn">
		<button type="submit" class="btn-orange">保存</button>
	</div>
<%- end %>